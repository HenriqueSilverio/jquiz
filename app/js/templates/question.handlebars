<h2>{{question}}</h2>

<ul class="list">
  {{#each choices}}
    <li class="list__item {{checked 'is-active' @index ../userAnswer}}">
      <label for="{{@index}}">
        <input
          type="radio"
          class="list__input"
          id="{{@index}}"
          name="choice"
          value="{{@index}}"
          {{checked '' @index ../userAnswer}}>
        {{this}}
      </label>
    </li>
  {{/each}}
</ul>
